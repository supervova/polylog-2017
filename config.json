  "sprite": {

    "mainSprite": {

      "src": "./web/sites/all/themes/polylog2017/src/02-icon/sprite/*.svg",
      "dest": "./web/sites/all/themes/polylog2017/src/02-icon",

      "options": {
        "shape": {
          "spacing": {
            "padding": 4
          }
        },
        "mode": {
          "css": {
            "sprite": "../icon.svg",
            "bust": false,
            "render": {
              "scss": {
                "dest": "../_icon.scss",
                "template": "./web/sites/all/themes/polylog2017/src/02-icon/_icon-template.mustache"
              }
            }
          }
        }

      }

    }

