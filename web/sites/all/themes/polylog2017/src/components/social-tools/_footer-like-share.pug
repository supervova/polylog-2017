button.btn.social.icon.whatsapp(data-href="whatsapp://send?text={{ post.title | url_encode }}%20{{ post.link }}" aria-label="WhatsApp" title="WhatsApp")
button.btn.social.icon.google-plus(data-href="https://plus.google.com/share?url={{ post.link }}" aria-label="Гугл+" title="Гугл+")
button.btn.social.icon.twitter(data-href="https://twitter.com/home?status='{{ post.title | url_encode }}'+{{ post.link }}" aria-label="Твиттер" title="Твиттер")
button.btn.social.icon.pocket(data-href="https://getpocket.com/edit.php?url={{ post.link }}" aria-label="Покет" title="Покет")
