button.btn.social.facebook(aria-label="Фейсбук — Нравится" title="Фейсбук — Нравится")
  span.fb-like(data-href="{{ post.link }}" data-layout="button" data-action="like" data-size="large" data-show-faces="false" data-share="false")
#vk-like.btn.social.vk(role="button" aria-label="Вконтакте" title="Вконтакте")
  script(src="//vk.com/js/api/openapi.js?136")
  script.
    VK.init({apiId: #{site.vkAPI}, onlyWidgets: true});
    VK.Widgets.Like("vk_like", {type: "mini", height: 30});
