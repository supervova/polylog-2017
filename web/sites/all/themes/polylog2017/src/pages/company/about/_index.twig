{% extends "/pages/base/base.twig" %}

{% block html_head_add_on %}
  <style type="text/css">
    @media (max-width: 767px) {
      .page-header-headline > i {
        display: none;
      }
    }
    .mosaic-pic.event-conference {
      background-image: url('/a/img/s-company/about/doctors.jpg');
    }
    .mosaic-pic.event-forum {
      background-image: url('/a/img/s-company/about/eef.jpg');
    }
    .mosaic-pic.pr-veb {
      background-image: url('/a/img/s-company/about/masha.jpg');
    }
    .mosaic-pic.office-view {
      background-image: url('/a/img/s-company/about/view.jpg');
    }
    .mosaic-pic.pr-team {
      background-image: url('/a/img/s-company/about/dasha-r.jpg');
    }
    .mosaic-pic.pr-award {
      background-image: url('/a/img/s-company/about/award.jpg');
    }
